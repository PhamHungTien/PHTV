<pages:PhtvPageBase x:Class="PHTV.UI.Pages.TypingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:pages="clr-namespace:PHTV.UI.Pages"
      Title="Gõ tiếng Việt">
    <Border Background="{StaticResource ContentBackgroundBrush}" CornerRadius="8" BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="1" Margin="16">
        <ScrollViewer Style="{StaticResource PageScrollViewer}">
            <StackPanel Style="{StaticResource PageContentPanel}">
                <TextBlock Text="Gõ tiếng Việt" Style="{StaticResource HeaderTitle}"/>

                <GroupBox Header="Ngôn ngữ &amp; Kiểu gõ">
                    <StackPanel>
                        <Grid Margin="0,4,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ngôn ngữ:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <RadioButton x:Name="RadioLangVi" Content="Tiếng Việt" GroupName="Language" Checked="Language_Changed" Margin="0,0,24,0"/>
                                <RadioButton x:Name="RadioLangEn" Content="English" GroupName="Language" Checked="Language_Changed"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,4,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kiểu gõ:" VerticalAlignment="Center"/>
                            <WrapPanel Grid.Column="1">
                                <RadioButton x:Name="RadioTelex" Content="Telex" GroupName="InputMethod" Checked="InputMethod_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="RadioVNI" Content="VNI" GroupName="InputMethod" Checked="InputMethod_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="RadioSimpleTelex1" Content="Simple Telex 1" GroupName="InputMethod" Checked="InputMethod_Changed" Margin="0,0,16,0"/>
                                <RadioButton x:Name="RadioSimpleTelex2" Content="Simple Telex 2" GroupName="InputMethod" Checked="InputMethod_Changed"/>
                            </WrapPanel>
                        </Grid>

                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Bảng mã:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="ComboCodeTable" Grid.Column="1" Width="220" SelectionChanged="CodeTable_Changed">
                                <ComboBoxItem Content="Unicode" Tag="0"/>
                                <ComboBoxItem Content="TCVN3 (ABC)" Tag="1"/>
                                <ComboBoxItem Content="VNI Windows" Tag="2"/>
                                <ComboBoxItem Content="Unicode tổ hợp" Tag="3"/>
                                <ComboBoxItem Content="Vietnamese Locale (CP1258)" Tag="4"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Tính năng gõ">
                    <StackPanel>
                        <CheckBox x:Name="ChkSpell" Content="Kiểm tra chính tả" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkModern" Content="Dấu chuẩn (oà, uý)" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkQuickTelex" Content="Gõ nhanh (Quick Telex)" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkAutoRestoreEnglish" Content="Tự động khôi phục tiếng Anh" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkUppercaseFirstChar" Content="Viết hoa ký tự đầu" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkAllowConsonantZFWJ" Content="Cho phép phụ âm Z/F/W/J" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkQuickStartConsonant" Content="Gõ nhanh phụ âm đầu" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkQuickEndConsonant" Content="Gõ nhanh phụ âm cuối" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                        <CheckBox x:Name="ChkFreeMark" Content="Đặt dấu tự do" Checked="TypingFeature_Changed" Unchecked="TypingFeature_Changed"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Ứng dụng không viết hoa ký tự đầu">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Import" Width="80" Margin="0,0,8,0" Click="UpperExcludedImport_Click"/>
                            <Button Content="Export" Width="80" Margin="0,0,8,0" Click="UpperExcludedExport_Click"/>
                            <Button Content="Clear" Width="80" Margin="0,0,8,0" Click="UpperExcludedClear_Click"/>
                            <Button Content="Detect Running Apps" Click="UpperExcludedDetect_Click"/>
                        </StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtUpperExcludedName" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Add" Width="80" Click="UpperExcludedAdd_Click" Style="{StaticResource AccentButton}"/>
                        </Grid>
                        <ListBox x:Name="UpperRunningAppList" Height="100" Margin="0,0,0,12" SelectionChanged="UpperRunning_Selected" BorderThickness="1" BorderBrush="#E0E0E0"/>
                        <DataGrid x:Name="UpperExcludedGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="200" BorderThickness="1" BorderBrush="#E0E0E0" Background="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="App Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTemplateColumn Header="Action" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remove" Tag="{Binding Name}" Click="UpperExcludedRemove_Click" FontSize="11" Padding="6,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Border>
</pages:PhtvPageBase>
