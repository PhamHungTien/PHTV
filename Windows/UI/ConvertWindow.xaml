<ui:FluentWindow x:Class="PHTV.UI.ConvertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Chuyển đổi bảng mã" Height="260" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Title="Chuyển đổi bảng mã"/>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Chuyển đổi nội dung clipboard theo bảng mã" FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>

            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Từ bảng mã:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ComboFromCode" Grid.Column="1" Width="220">
                    <ComboBoxItem Content="Unicode" Tag="0"/>
                    <ComboBoxItem Content="TCVN3 (ABC)" Tag="1"/>
                    <ComboBoxItem Content="VNI Windows" Tag="2"/>
                    <ComboBoxItem Content="Unicode tổ hợp" Tag="3"/>
                    <ComboBoxItem Content="Vietnamese Locale (CP1258)" Tag="4"/>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Sang bảng mã:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ComboToCode" Grid.Column="1" Width="220">
                    <ComboBoxItem Content="Unicode" Tag="0"/>
                    <ComboBoxItem Content="TCVN3 (ABC)" Tag="1"/>
                    <ComboBoxItem Content="VNI Windows" Tag="2"/>
                    <ComboBoxItem Content="Unicode tổ hợp" Tag="3"/>
                    <ComboBoxItem Content="Vietnamese Locale (CP1258)" Tag="4"/>
                </ComboBox>
            </Grid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Chuyển clipboard" Width="140" Margin="0,0,8,0" Click="Convert_Click"/>
                <Button Content="Đóng" Width="80" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
