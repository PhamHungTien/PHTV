<Window x:Class="PHTV.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PHTV Settings" Height="700" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="{StaticResource SidebarBackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/> <!-- Sidebar -->
            <ColumnDefinition Width="*"/>   <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title/Search -->
                <RowDefinition Height="*"/>    <!-- Navigation -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- App Title / Header -->
            <StackPanel Grid.Row="0" Margin="20,24,20,16">
                <TextBlock Text="PHTV" FontSize="20" FontWeight="Bold" Foreground="#222"/>
                <TextBlock Text="Settings" FontSize="14" Foreground="#666" Margin="0,2,0,0"/>
                
                <!-- Search Box (Visual Only) -->
                <Border Background="White" CornerRadius="6" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,16,0,0">
                    <Grid>
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#999"/>
                        <TextBox BorderThickness="0" Background="Transparent" Padding="32,8,8,8" Text="Search settings..." Foreground="#333"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Navigation List -->
            <ListBox x:Name="NavList" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                     SelectionChanged="NavList_SelectionChanged" SelectedIndex="0"
                     ItemContainerStyle="{StaticResource SidebarItemStyle}">
                
                <!-- Typing -->
                <ListBoxItem Tag="View_Typing">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Gõ tiếng Việt" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>

                <!-- Hotkeys -->
                <ListBoxItem Tag="View_Hotkeys">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Phím tắt" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>

                <!-- Macro -->
                <ListBoxItem Tag="View_Macro">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Gõ tắt (Macro)" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>

                <!-- Apps -->
                <ListBoxItem Tag="View_Apps">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Ứng dụng" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>

                <!-- System -->
                <ListBoxItem Tag="View_System">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Hệ thống" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>
                
                 <!-- About (New) -->
                <ListBoxItem Tag="View_About">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="{StaticResource IconFont}" FontSize="16" VerticalAlignment="Center" Width="24"/>
                        <TextBlock Text="Thông tin" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>

            </ListBox>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Margin="16">
                <TextBlock Text="Version 1.0.0" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT AREA -->
        <Border Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}" CornerRadius="8,0,0,0" BorderBrush="#E5E5E5" BorderThickness="1,1,0,0">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Breadcrumb/Title -->
                    <RowDefinition Height="*"/>    <!-- Scrollable Content -->
                    <RowDefinition Height="Auto"/> <!-- Bottom Actions -->
                </Grid.RowDefinitions>

                <!-- Typing View -->
                <ScrollViewer x:Name="View_Typing" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                    <StackPanel>
                        <TextBlock Text="Gõ tiếng Việt" Style="{StaticResource HeaderTitle}"/>
                        
                        <GroupBox Header="Ngôn ngữ &amp; Kiểu gõ">
                            <StackPanel>
                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ngôn ngữ:" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <RadioButton x:Name="RadioLangVi" Content="Tiếng Việt" GroupName="Language" Checked="Language_Changed" Margin="0,0,24,0"/>
                                        <RadioButton x:Name="RadioLangEn" Content="English" GroupName="Language" Checked="Language_Changed"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Kiểu gõ:" VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <RadioButton x:Name="RadioTelex" Content="Telex" GroupName="InputMethod" Checked="InputMethod_Changed" Margin="0,0,24,0"/>
                                        <RadioButton x:Name="RadioVNI" Content="VNI" GroupName="InputMethod" Checked="InputMethod_Changed"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Bảng mã:" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="ComboCodeTable" Grid.Column="1" Width="200" SelectionChanged="CodeTable_Changed">
                                        <ComboBoxItem Content="Unicode" Tag="0"/>
                                        <ComboBoxItem Content="TCVN3 (ABC)" Tag="1"/>
                                        <ComboBoxItem Content="VNI Windows" Tag="2"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Tính năng gõ">
                            <StackPanel>
                                <CheckBox x:Name="ChkSpell" Content="Kiểm tra chính tả" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkModern" Content="Dấu chuẩn (oà, uý)" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkQuickTelex" Content="Gõ nhanh (Quick Telex)" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkAutoRestoreEnglish" Content="Tự động khôi phục tiếng Anh" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkUppercaseFirstChar" Content="Viết hoa ký tự đầu" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkAllowConsonantZFWJ" Content="Cho phép phụ âm Z/F/W/J" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkQuickStartConsonant" Content="Gõ nhanh phụ âm đầu" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkQuickEndConsonant" Content="Gõ nhanh phụ âm cuối" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkFreeMark" Content="Đặt dấu tự do" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Ứng dụng không viết hoa ký tự đầu">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button Content="Import" Width="80" Margin="0,0,8,0" Click="UpperExcludedImport_Click"/>
                                    <Button Content="Export" Width="80" Margin="0,0,8,0" Click="UpperExcludedExport_Click"/>
                                    <Button Content="Clear" Width="80" Margin="0,0,8,0" Click="UpperExcludedClear_Click"/>
                                    <Button Content="Detect Running Apps" Click="UpperExcludedDetect_Click"/>
                                </StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtUpperExcludedName" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="Add" Width="80" Click="UpperExcludedAdd_Click" Style="{StaticResource AccentButton}"/>
                                </Grid>
                                <ListBox x:Name="UpperRunningAppList" Height="100" Margin="0,0,0,12" SelectionChanged="UpperRunning_Selected" BorderThickness="1" BorderBrush="#E0E0E0"/>
                                <DataGrid x:Name="UpperExcludedGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="200" BorderThickness="1" BorderBrush="#E0E0E0" Background="White">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="App Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTemplateColumn Header="Action" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Remove" Tag="{Binding Name}" Click="UpperExcludedRemove_Click" FontSize="11" Padding="6,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Hotkeys View -->
                <ScrollViewer x:Name="View_Hotkeys" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Phím tắt" Style="{StaticResource HeaderTitle}"/>

                        <GroupBox Header="Phím chuyển ngôn ngữ">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <CheckBox x:Name="ChkSwitchCtrl" Content="Ctrl" Margin="0,0,16,0" Checked="SwitchHotkey_Changed" Unchecked="SwitchHotkey_Changed"/>
                                    <CheckBox x:Name="ChkSwitchAlt" Content="Alt" Margin="0,0,16,0" Checked="SwitchHotkey_Changed" Unchecked="SwitchHotkey_Changed"/>
                                    <CheckBox x:Name="ChkSwitchShift" Content="Shift" Margin="0,0,16,0" Checked="SwitchHotkey_Changed" Unchecked="SwitchHotkey_Changed"/>
                                    <CheckBox x:Name="ChkSwitchWin" Content="Win" Checked="SwitchHotkey_Changed" Unchecked="SwitchHotkey_Changed"/>
                                </StackPanel>
                                <Grid Margin="0,4,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Switch Key:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="TxtSwitchKey" Width="140" IsReadOnly="True" PreviewKeyDown="SwitchKey_CaptureKey" VerticalAlignment="Center"/>
                                    <Button Grid.Column="2" Content="Record" Margin="8,0,0,0" Click="SwitchKey_Record_Click"/>
                                    <Button Grid.Column="3" Content="Clear" Margin="8,0,0,0" Click="SwitchKey_NoKey_Click"/>
                                </Grid>
                                <CheckBox x:Name="ChkSwitchBeep" Content="Phát âm thanh (Beep) khi đổi chế độ" Checked="SwitchHotkey_Changed" Unchecked="SwitchHotkey_Changed"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Phím khôi phục (Restore)">
                            <StackPanel>
                                <CheckBox x:Name="ChkRestoreOnEscape" Content="Khôi phục bằng phím Escape" Checked="Hotkey_Changed" Unchecked="Hotkey_Changed"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Custom Escape Key:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="TxtCustomEscapeKey" Width="140" IsReadOnly="True" PreviewKeyDown="Hotkey_CaptureKey" VerticalAlignment="Center"/>
                                    <Button Grid.Column="2" Content="Record" Margin="8,0,0,0" Click="Hotkey_RecordEscape_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Pause Key">
                            <StackPanel>
                                <CheckBox x:Name="ChkPauseKeyEnabled" Content="Bật phím Pause (Tạm dừng bộ gõ)" Checked="Hotkey_Changed" Unchecked="Hotkey_Changed"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Pause Key (VK):" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="TxtPauseKey" Width="140" IsReadOnly="True" PreviewKeyDown="Hotkey_CaptureKey" VerticalAlignment="Center"/>
                                    <Button Grid.Column="2" Content="Record" Margin="8,0,0,0" Click="Hotkey_RecordPause_Click"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>

                <!-- Macro View -->
                <ScrollViewer x:Name="View_Macro" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Gõ tắt (Macro)" Style="{StaticResource HeaderTitle}"/>

                        <GroupBox Header="Cấu hình Macro">
                            <StackPanel>
                                <CheckBox x:Name="ChkMacro" Content="Bật tính năng gõ tắt" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkMacroInEnglish" Content="Sử dụng Macro trong chế độ tiếng Anh" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkAutoCapsMacro" Content="Tự động viết hoa Macro khi cần" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Quản lý Macro">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button Content="Import" Width="80" Margin="0,0,8,0" Click="MacroImport_Click"/>
                                    <Button Content="Export" Width="80" Margin="0,0,8,0" Click="MacroExport_Click"/>
                                    <Button Content="Clear All" Width="80" Click="MacroClear_Click"/>
                                </StackPanel>
                                
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtMacroKey" Margin="0,0,8,0" VerticalAlignment="Center" Tag="Key (vd: vn)"/>
                                    <TextBox x:Name="TxtMacroValue" Grid.Column="1" Margin="0,0,8,0" VerticalAlignment="Center" Tag="Content (vd: Việt Nam)"/>
                                    <Button Grid.Column="2" Content="Add" Width="80" Click="MacroAdd_Click" Style="{StaticResource AccentButton}"/>
                                </Grid>

                                <DataGrid x:Name="MacroGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="300" BorderThickness="1" BorderBrush="#E0E0E0" Background="White">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Phím tắt" Binding="{Binding Key}" Width="150"/>
                                        <DataGridTextColumn Header="Nội dung thay thế" Binding="{Binding Value}" Width="*"/>
                                        <DataGridTemplateColumn Header="Action" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Remove" Tag="{Binding Key}" Click="MacroRemove_Click" FontSize="11" Padding="6,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Apps View -->
                <ScrollViewer x:Name="View_Apps" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Ứng dụng" Style="{StaticResource HeaderTitle}"/>

                        <GroupBox Header="Cấu hình ứng dụng">
                            <StackPanel>
                                <CheckBox x:Name="ChkSmartSwitchKey" Content="Ghi nhớ trạng thái (Việt/Anh) theo từng ứng dụng" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Danh sách ứng dụng">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Button Content="Import" Width="80" Margin="0,0,8,0" Click="AppImport_Click"/>
                                    <Button Content="Export" Width="80" Margin="0,0,8,0" Click="AppExport_Click"/>
                                    <Button Content="Detect Running" Click="AppDetect_Click"/>
                                </StackPanel>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtAppName" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="ComboAppLanguage" Grid.Column="1" Margin="0,0,8,0">
                                        <ComboBoxItem Content="Tiếng Việt" Tag="1"/>
                                        <ComboBoxItem Content="English" Tag="0"/>
                                    </ComboBox>
                                    <Button Grid.Column="2" Content="Add/Update" Width="100" Click="AppAdd_Click" Style="{StaticResource AccentButton}"/>
                                </Grid>

                                <ListBox x:Name="RunningAppList" Height="100" Margin="0,0,0,12" SelectionChanged="AppRunning_Selected" BorderThickness="1" BorderBrush="#E0E0E0"/>

                                <DataGrid x:Name="AppGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="250" BorderThickness="1" BorderBrush="#E0E0E0" Background="White">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Application" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Default Mode" Binding="{Binding LanguageName}" Width="150"/>
                                        <DataGridTemplateColumn Header="Action" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Remove" Tag="{Binding Name}" Click="AppRemove_Click" FontSize="11" Padding="6,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- System View -->
                <ScrollViewer x:Name="View_System" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Hệ thống" Style="{StaticResource HeaderTitle}"/>

                        <GroupBox Header="Tùy chọn hệ thống">
                            <StackPanel>
                                <CheckBox x:Name="ChkFixRecommendBrowser" Content="Fix lỗi gợi ý trên trình duyệt (Chrome/Edge) và Excel" Checked="Feature_Changed" Unchecked="Feature_Changed"/>
                                <CheckBox x:Name="ChkOtherLanguage" Content="Tắt tiếng Việt khi chuyển sang ngôn ngữ bàn phím khác" Checked="System_Changed" Unchecked="System_Changed"/>
                            </StackPanel>
                        </GroupBox>

                         <GroupBox Header="Quản lý dữ liệu">
                             <StackPanel>
                                 <TextBlock Text="Đặt lại toàn bộ cài đặt về mặc định ban đầu." Margin="0,0,0,8" Foreground="#666"/>
                                 <Button Content="Reset Settings" HorizontalAlignment="Left" Width="120" Click="Reset_Click"/>
                             </StackPanel>
                         </GroupBox>
                    </StackPanel>
                </ScrollViewer>
                
                 <!-- About View -->
                <ScrollViewer x:Name="View_About" Grid.Row="1" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" Margin="0,40,0,0">
                        <!-- Logo Placeholder -->
                        <Border Width="80" Height="80" CornerRadius="20" Background="{StaticResource SystemAccentBrush}" Margin="0,0,0,24">
                            <TextBlock Text="P" FontFamily="Segoe UI" FontSize="48" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Text="PHTV" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Bộ gõ tiếng Việt hiện đại" FontSize="16" Foreground="#666" HorizontalAlignment="Center" Margin="0,4,0,32"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                             <Button Content="Website" Width="100" Margin="0,0,16,0"/>
                             <Button Content="GitHub" Width="100" Margin="0,0,16,0"/>
                             <Button Content="Donate" Width="100" Style="{StaticResource AccentButton}"/>
                        </StackPanel>
                        
                        <TextBlock Text="© 2026 Pham Hung Tien. All rights reserved." FontSize="12" Foreground="#999" HorizontalAlignment="Center" Margin="0,48,0,0"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Actions (Shared) -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Content="Đóng" Width="90" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>