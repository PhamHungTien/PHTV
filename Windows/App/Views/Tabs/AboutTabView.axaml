<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PHTV.Windows.ViewModels"
             x:Class="PHTV.Windows.Views.Tabs.AboutTabView"
             x:DataType="vm:AboutTabViewModel">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="32,20,32,32" Spacing="24" MaxWidth="760">
      <!-- App Icon and Header Section (Centered like macOS) -->
      <StackPanel HorizontalAlignment="Center" Spacing="16" Margin="0,20,0,0">
        <Border Width="100" Height="100" CornerRadius="22" ClipToBounds="True" BoxShadow="0 4 12 0 #20000000">
          <Image Source="/Assets/icon.png" Stretch="UniformToFill"/>
        </Border>
        
        <StackPanel Spacing="6" HorizontalAlignment="Center">
          <TextBlock Text="PHTV" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock Classes="about-subtitle" Text="Precision Hybrid Typing Vietnamese" HorizontalAlignment="Center"/>
          <TextBlock Classes="about-muted" Text="Bộ gõ tiếng Việt dành cho Windows" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Version Badge -->
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
          <TextBlock Text="Phiên bản" FontSize="12" Foreground="{DynamicResource PhtvTextSecondaryBrush}" VerticalAlignment="Center"/>
          <Border Classes="version-badge">
            <TextBlock Classes="version-badge-text" Text="{Binding VersionDisplay}"/>
          </Border>
        </StackPanel>
      </StackPanel>

      <Border Classes="settings-divider" Margin="40,0"/>

      <!-- Info Cards Section (Vertical stack of cards like macOS) -->
      <StackPanel Spacing="16" HorizontalAlignment="Stretch">
        <Border Classes="about-info-card">
          <Grid ColumnDefinitions="Auto, *">
            <Border Classes="about-icon-tile">
              <TextBlock Classes="about-icon-glyph" Text=""/>
            </Border>
            <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
              <TextBlock Text="Phát triển bởi" FontSize="11" Foreground="{DynamicResource PhtvTextSecondaryBrush}"/>
              <TextBlock Text="Phạm Hùng Tiến" FontSize="14" FontWeight="Medium"/>
            </StackPanel>
          </Grid>
        </Border>

        <Border Classes="about-info-card">
          <Grid ColumnDefinitions="Auto, *">
            <Border Classes="about-icon-tile">
              <TextBlock Classes="about-icon-glyph" Text=""/>
            </Border>
            <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
              <TextBlock Text="Năm phát hành" FontSize="11" Foreground="{DynamicResource PhtvTextSecondaryBrush}"/>
              <TextBlock Text="2026" FontSize="14" FontWeight="Medium"/>
            </StackPanel>
          </Grid>
        </Border>

        <Border Classes="about-info-card">
          <Grid ColumnDefinitions="Auto, *">
            <Border Classes="about-icon-tile">
              <TextBlock Classes="about-icon-glyph" Text=""/>
            </Border>
            <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
              <TextBlock Text="Công nghệ sử dụng" FontSize="11" Foreground="{DynamicResource PhtvTextSecondaryBrush}"/>
              <TextBlock Text="Avalonia UI, .NET 8 &amp; C/C++" FontSize="14" FontWeight="Medium"/>
            </StackPanel>
          </Grid>
        </Border>
      </StackPanel>

      <Border Classes="settings-divider" Margin="40,0"/>

      <!-- Support Section -->
      <StackPanel Spacing="16" HorizontalAlignment="Center">
        <TextBlock Text="Hỗ trợ phát triển" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
        <TextBlock Text="Nếu PHTV hữu ích, bạn có thể ủng hộ để giúp phát triển thêm các tính năng mới" 
                   TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400"
                   FontSize="13" Foreground="{DynamicResource PhtvTextSecondaryBrush}"/>

        <Border Classes="about-info-card" HorizontalAlignment="Center" Padding="12" Width="220">
          <StackPanel Spacing="8">
            <Border CornerRadius="8" ClipToBounds="True">
              <Image Source="/Assets/donate.png" Stretch="Uniform"/>
            </Border>
            <TextBlock Text="Quét mã để ủng hộ" FontSize="11" HorizontalAlignment="Center" Foreground="{DynamicResource PhtvTextSecondaryBrush}"/>
          </StackPanel>
        </Border>
        
        <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
          <Button Content="Website" Command="{Binding DataContext.OpenWebsiteCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
          <Button Content="GitHub" Command="{Binding DataContext.OpenGitHubCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
          <Button Classes="primary" Content="Ủng hộ ngay" Command="{Binding DataContext.OpenDonateCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
      </StackPanel>

      <Rectangle Height="20"/>

      <!-- Footer -->
      <StackPanel Spacing="4" HorizontalAlignment="Center">
        <TextBlock Classes="about-muted" Text="Copyright © 2026 Phạm Hùng Tiến" HorizontalAlignment="Center"/>
        <TextBlock Classes="about-muted" FontSize="11" Opacity="0.7" Text="All rights reserved" HorizontalAlignment="Center"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>