<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PHTV.Windows.ViewModels"
             x:Class="PHTV.Windows.Views.Tabs.AboutTabView"
             x:DataType="vm:AboutTabViewModel">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="32,54,32,32" Spacing="20" MaxWidth="760">
      <Border Classes="settings-header" Padding="26">
        <StackPanel HorizontalAlignment="Center" Spacing="10">
          <Border Width="96" Height="96" CornerRadius="22" ClipToBounds="True">
            <Image Source="/Assets/icon.png" Stretch="UniformToFill"/>
          </Border>
          <TextBlock Text="PHTV" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock Classes="about-subtitle" Text="Precision Hybrid Typing Vietnamese" HorizontalAlignment="Center"/>
          <TextBlock Classes="about-muted" Text="Bộ gõ tiếng Việt dành cho Windows" HorizontalAlignment="Center"/>
          <Border Classes="status-pill" HorizontalAlignment="Center">
            <TextBlock Classes="status-pill-text" Text="Phiên bản 1.0 Windows Preview"/>
          </Border>
        </StackPanel>
      </Border>

      <Border Classes="settings-card">
        <StackPanel>
          <Border Classes="settings-card-header">
            <Grid ColumnDefinitions="40,*">
              <Border Classes="settings-card-icon"><TextBlock Classes="settings-card-icon-text" Text="◉"/></Border>
              <StackPanel Grid.Column="1" Spacing="2"><TextBlock Classes="settings-card-title" Text="Phát triển bởi"/><TextBlock Classes="settings-card-subtitle" Text="Phạm Hùng Tiến"/></StackPanel>
            </Grid>
          </Border>
          <StackPanel Margin="16" Spacing="10">
            <TextBlock Text="Công nghệ: Avalonia UI + Shared C/C++ Engine"/>
            <TextBlock Text="Nền tảng: Windows (x64/arm64)"/>
            <TextBlock Text="Giấy phép: GPL v3.0"/>
          </StackPanel>
        </StackPanel>
      </Border>

      <Border Classes="settings-card">
        <StackPanel>
          <Border Classes="settings-card-header">
            <Grid ColumnDefinitions="40,*">
              <Border Classes="settings-card-icon"><TextBlock Classes="settings-card-icon-text" Text="♡"/></Border>
              <StackPanel Grid.Column="1" Spacing="2"><TextBlock Classes="settings-card-title" Text="Hỗ trợ phát triển"/><TextBlock Classes="settings-card-subtitle" Text="Giúp dự án phát triển thêm tính năng mới"/></StackPanel>
            </Grid>
          </Border>
          <StackPanel Margin="16" Spacing="8">
            <TextBlock Text="Nếu PHTV hữu ích, bạn có thể ủng hộ để duy trì và mở rộng dự án." TextWrapping="Wrap"/>
            <WrapPanel>
              <Button Content="Website"
                      Command="{Binding DataContext.OpenWebsiteCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
              <Button Content="GitHub"
                      Command="{Binding DataContext.OpenGitHubCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
              <Button Content="Ủng hộ"
                      Command="{Binding DataContext.OpenDonateCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </WrapPanel>
          </StackPanel>
        </StackPanel>
      </Border>

      <TextBlock Classes="about-muted" HorizontalAlignment="Center" Text="Copyright © 2026 Phạm Hùng Tiến"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
