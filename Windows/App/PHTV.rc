        BEGIN
            VALUE "CompanyName", "PHTV Team"
            VALUE "FileDescription", "PHTV Vietnamese Input Method"
            VALUE "FileVersion", "1.0.0.1"
            VALUE "InternalName", "PHTV.exe"
            VALUE "LegalCopyright", "Copyright (C) 2026"
            VALUE "OriginalFilename", "PHTV.exe"
            VALUE "ProductName", "PHTV"
            VALUE "ProductVersion", "1.0.0.1"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END
