<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
          <SolidColorBrush x:Key="PhtvWindowBackgroundBrush" Color="Transparent"/>
          <!-- macOS Sidebar color: #F2F2F2 with opacity -->
          <SolidColorBrush x:Key="PhtvSidebarBrush" Color="#D0F2F2F2"/>
          <SolidColorBrush x:Key="PhtvDetailBrush" Color="#A0FFFFFF"/>
          <SolidColorBrush x:Key="PhtvCardBrush" Color="#FFFFFF"/>
          <LinearGradientBrush x:Key="PhtvCardHeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FBFCFF" Offset="0"/>
            <GradientStop Color="#F5F8FF" Offset="1"/>
          </LinearGradientBrush>
          <SolidColorBrush x:Key="PhtvBorderBrush" Color="#1A000000"/>
          <SolidColorBrush x:Key="PhtvBorderStrongBrush" Color="#33000000"/>
          <SolidColorBrush x:Key="PhtvAccentBrush" Color="#007AFF"/> <!-- macOS Blue -->
          <SolidColorBrush x:Key="PhtvAccentSoftBrush" Color="#1A007AFF"/>
          <SolidColorBrush x:Key="PhtvHoverBrush" Color="#0D000000"/>
          <SolidColorBrush x:Key="PhtvPressedBrush" Color="#1A000000"/>
          <SolidColorBrush x:Key="PhtvTextPrimaryBrush" Color="#1D1D1F"/>
          <SolidColorBrush x:Key="PhtvTextSecondaryBrush" Color="#86868B"/>
          <SolidColorBrush x:Key="PhtvTextTertiaryBrush" Color="#AEAEB2"/>
          <SolidColorBrush x:Key="PhtvInputBackgroundBrush" Color="#FFFFFF"/>
          <SolidColorBrush x:Key="PhtvFooterBrush" Color="#0D000000"/>
          <SolidColorBrush x:Key="PhtvSidebarIconBrush" Color="#FFFFFF"/>
          <SolidColorBrush x:Key="PhtvSidebarIconBorderBrush" Color="#1A000000"/>
          <SolidColorBrush x:Key="PhtvStatusPillBrush" Color="#0D000000"/>
          <SolidColorBrush x:Key="PhtvMacroItemBrush" Color="#05000000"/>
          <SolidColorBrush x:Key="PhtvMacroItemBorderBrush" Color="#1A000000"/>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
          <SolidColorBrush x:Key="PhtvWindowBackgroundBrush" Color="Transparent"/>
          <!-- macOS Dark Sidebar color: #2D2D2D with opacity -->
          <SolidColorBrush x:Key="PhtvSidebarBrush" Color="#C02D2D2D"/>
          <SolidColorBrush x:Key="PhtvDetailBrush" Color="#801E1E1E"/>
          <SolidColorBrush x:Key="PhtvCardBrush" Color="#2C2C2E"/>
          <LinearGradientBrush x:Key="PhtvCardHeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3A3A3C" Offset="0"/>
            <GradientStop Color="#2C2C2E" Offset="1"/>
          </LinearGradientBrush>
          <SolidColorBrush x:Key="PhtvBorderBrush" Color="#1AFFFFFF"/>
          <SolidColorBrush x:Key="PhtvBorderStrongBrush" Color="#33FFFFFF"/>
          <SolidColorBrush x:Key="PhtvAccentBrush" Color="#0A84FF"/> <!-- macOS Dark Blue -->
          <SolidColorBrush x:Key="PhtvAccentSoftBrush" Color="#260A84FF"/>
          <SolidColorBrush x:Key="PhtvHoverBrush" Color="#1AFFFFFF"/>
          <SolidColorBrush x:Key="PhtvPressedBrush" Color="#33FFFFFF"/>
          <SolidColorBrush x:Key="PhtvTextPrimaryBrush" Color="#F5F5F7"/>
          <SolidColorBrush x:Key="PhtvTextSecondaryBrush" Color="#86868B"/>
          <SolidColorBrush x:Key="PhtvTextTertiaryBrush" Color="#48484A"/>
          <SolidColorBrush x:Key="PhtvInputBackgroundBrush" Color="#1C1C1E"/>
          <SolidColorBrush x:Key="PhtvFooterBrush" Color="#1A000000"/>
          <SolidColorBrush x:Key="PhtvSidebarIconBrush" Color="#3A3A3C"/>
          <SolidColorBrush x:Key="PhtvSidebarIconBorderBrush" Color="#1AFFFFFF"/>
          <SolidColorBrush x:Key="PhtvStatusPillBrush" Color="#1AFFFFFF"/>
          <SolidColorBrush x:Key="PhtvMacroItemBrush" Color="#1AFFFFFF"/>
          <SolidColorBrush x:Key="PhtvMacroItemBorderBrush" Color="#1AFFFFFF"/>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Styles.Resources>

  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource PhtvWindowBackgroundBrush}"/>
    <Setter Property="FontFamily" Value="{DynamicResource InterFontFamily}"/>
  </Style>

  <Style Selector="Border.sidebar-panel">
    <Setter Property="Background" Value="{DynamicResource PhtvSidebarBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="0,0,1,0"/>
  </Style>

  <Style Selector="Border.detail-panel">
    <Setter Property="Background" Value="{DynamicResource PhtvDetailBrush}"/>
  </Style>

  <Style Selector="Border.status-footer">
    <Setter Property="Background" Value="{DynamicResource PhtvFooterBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="0,1,0,0"/>
  </Style>

  <Style Selector="TextBlock.status-footer-text">
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
    <Setter Property="FontSize" Value="11"/>
  </Style>

  <Style Selector="TextBlock.sidebar-title">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
    <Setter Property="LetterSpacing" Value="-0.5"/>
  </Style>

  <Style Selector="TextBlock.sidebar-subtitle">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
  </Style>

  <Style Selector="Border.sidebar-brand-icon">
    <Setter Property="Width" Value="36"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Background" Value="{DynamicResource PhtvSidebarIconBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvSidebarIconBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="5"/>
    <Setter Property="BoxShadow" Value="0 2 4 0 #1A000000"/>
  </Style>

  <Style Selector="TextBox.sidebar-search">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style Selector="TextBlock.sidebar-section-title">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
    <Setter Property="Opacity" Value="0.8"/>
  </Style>

  <Style Selector="Button.sidebar-tab">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
  </Style>

  <Style Selector="Button.sidebar-tab:pointerover">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
  </Style>

  <Style Selector="Button.sidebar-tab.selected">
    <Setter Property="Background" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="Button.sidebar-tab.selected TextBlock">
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style Selector="Button.sidebar-tab.selected Border.sidebar-icon">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
  </Style>

  <Style Selector="Button.sidebar-tab.selected TextBlock.sidebar-icon-text">
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style Selector="Border.sidebar-icon">
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Background" Value="{DynamicResource PhtvSidebarIconBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvSidebarIconBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style Selector="TextBlock.sidebar-icon-text">
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI, Inter, Arial"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="Border.settings-header">
    <Setter Property="Background" Value="#0A007AFF"/> <!-- Subtle Blue Tint -->
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="20"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BoxShadow" Value="0 4 12 0 #0D000000"/>
  </Style>

  <Style Selector="TextBlock.settings-header-title">
    <Setter Property="FontSize" Value="24"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
    <Setter Property="LetterSpacing" Value="-0.5"/>
  </Style>

  <Style Selector="TextBlock.settings-header-subtitle">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="Border.status-pill">
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="8,3"/>
    <Setter Property="Background" Value="{DynamicResource PhtvStatusPillBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style Selector="TextBlock.status-pill-text">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="Border.settings-card">
    <Setter Property="Background" Value="{DynamicResource PhtvCardBrush}"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="0"/>
    <Setter Property="BoxShadow" Value="0 2 8 0 #0D000000"/>
    <Setter Property="Margin" Value="0,0,0,16"/>
  </Style>

  <Style Selector="Border.settings-card-header">
    <Setter Property="Background" Value="#0A007AFF"/> <!-- Consistent Subtle Blue Tint -->
    <Setter Property="Padding" Value="16,12"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="0,0,0,1"/>
  </Style>

  <Style Selector="Border.settings-card-icon">
    <Setter Property="Width" Value="28"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Background" Value="{DynamicResource PhtvSidebarIconBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvSidebarIconBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style Selector="TextBlock.settings-card-icon-text">
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI, Inter, Arial"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="TextBlock.settings-card-title">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.settings-card-subtitle">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="Border.settings-row">
    <Setter Property="Padding" Value="16,8"/>
  </Style>

  <Style Selector="TextBlock.settings-row-title">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.settings-row-subtitle">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="Border.settings-divider">
    <Setter Property="Background" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="Height" Value="1"/>
    <Setter Property="Margin" Value="16,0,16,0"/>
  </Style>

  <Style Selector="TextBox, ComboBox">
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="Background" Value="{DynamicResource PhtvInputBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
    <Setter Property="Padding" Value="8,5"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style Selector="TextBox:focus-within, ComboBox:focus-within">
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <!-- ToggleSwitch Styling (macOS Style) -->
  <Style Selector="ToggleSwitch">
    <Setter Property="OnContent" Value=""/>
    <Setter Property="OffContent" Value=""/>
    <Setter Property="MinWidth" Value="0"/>
    <Setter Property="Padding" Value="0"/>
  </Style>

  <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="{DynamicResource PhtvBorderStrongBrush}"/>
    <Setter Property="Height" Value="20"/>
    <Setter Property="Width" Value="36"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

  <Style Selector="ToggleSwitch:checked /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="#34C759"/> <!-- macOS green -->
  </Style>

  <Style Selector="ToggleSwitch /template/ Canvas#SwitchKnob">
    <Setter Property="Width" Value="16"/>
    <Setter Property="Height" Value="16"/>
  </Style>

  <Style Selector="ToggleSwitch /template/ Ellipse#SwitchKnobOn, ToggleSwitch /template/ Ellipse#SwitchKnobOff">
    <Setter Property="Fill" Value="White"/>
    <Setter Property="Width" Value="16"/>
    <Setter Property="Height" Value="16"/>
  </Style>

  <!-- ScrollViewer Styling (Subtle macOS style) -->
  <Style Selector="ScrollBar">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style Selector="ScrollBar /template/ Thumb">
    <Setter Property="Background" Value="{DynamicResource PhtvBorderStrongBrush}"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Opacity" Value="0.5"/>
  </Style>

  <Style Selector="ScrollBar:pointerover /template/ Thumb">
    <Setter Property="Opacity" Value="0.8"/>
  </Style>

  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Background" Value="{DynamicResource PhtvCardBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="12,6"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="{DynamicResource PhtvPressedBrush}"/>
  </Style>

  <Style Selector="Button.primary">
    <Setter Property="Background" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

  <Style Selector="Button.primary:pointerover">
    <Setter Property="Opacity" Value="0.9"/>
  </Style>

  <Style Selector="Panel.settings-actions > Button, WrapPanel.settings-actions > Button">
    <Setter Property="Margin" Value="0,0,8,8"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-chip">
    <Setter Property="MinWidth" Value="72"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Background" Value="{DynamicResource PhtvCardBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderStrongBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-chip:pointerover">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-chip:checked">
    <Setter Property="Background" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <!-- macOS Style Hotkey Selector Button (Large) -->
  <Style Selector="ToggleButton.hotkey-selector-button">
    <Setter Property="Padding" Value="0"/>
    <Setter Property="Height" Value="64"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Background" Value="{DynamicResource PhtvCardBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderStrongBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-selector-button:pointerover">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-selector-button:checked">
    <Setter Property="Background" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-selector-button:checked TextBlock">
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-selector-button TextBlock.symbol">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="TextAlignment" Value="Center"/>
    <Setter Property="Margin" Value="0,0,0,2"/>
  </Style>

  <Style Selector="ToggleButton.hotkey-selector-button TextBlock.label">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="TextAlignment" Value="Center"/>
    <Setter Property="Opacity" Value="0.8"/>
  </Style>

  <Style Selector="ComboBox.hotkey-primary-selector">
    <Setter Property="MinWidth" Value="220"/>
  </Style>

  <Style Selector="ComboBox.typing-selector-combo">
    <Setter Property="Width" Value="220"/>
    <Setter Property="MinWidth" Value="220"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
  </Style>

  <Style Selector="TextBlock.hotkey-hint">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="Border.hotkey-preview">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvAccentSoftBrush}"/>
    <Setter Property="Background" Value="{DynamicResource PhtvAccentSoftBrush}"/>
    <Setter Property="Padding" Value="12,10"/>
  </Style>

  <Style Selector="TextBlock.hotkey-preview-label">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.hotkey-preview-value">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="ListBox">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="Padding" Value="10,8"/>
    <Setter Property="Margin" Value="0,0,0,4"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
  </Style>

  <Style Selector="ListBoxItem:selected">
    <Setter Property="Background" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>

  <!-- macOS-style List Row -->
  <Style Selector="Border.list-row">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="8"/>
  </Style>

  <Style Selector="Border.list-row:pointerover">
    <Setter Property="Background" Value="{DynamicResource PhtvHoverBrush}"/>
  </Style>

  <Style Selector="Border.macro-item-card">
    <Setter Property="Background" Value="{DynamicResource PhtvMacroItemBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Margin" Value="0,0,0,8"/>
    <Setter Property="Padding" Value="12"/>
  </Style>

  <Style Selector="TextBlock.macro-item-shortcut">
    <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>

  <Style Selector="TextBlock.macro-item-content">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.macro-item-category">
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextTertiaryBrush}"/>
    <Setter Property="FontSize" Value="11"/>
  </Style>

  <Style Selector="TextBlock.chevron-right">
    <Setter Property="FontFamily" Value="Segoe UI Symbol, Segoe UI, Inter, Arial"/>
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Opacity" Value="0.4"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <!-- About Tab Styles -->
  <Style Selector="TextBlock.about-subtitle">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontStyle" Value="Italic"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextSecondaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.about-muted">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvTextTertiaryBrush}"/>
  </Style>

  <Style Selector="Border.version-badge">
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="10,4"/>
    <Setter Property="Background" Value="{DynamicResource PhtvAccentSoftBrush}"/>
  </Style>

  <Style Selector="TextBlock.version-badge-text">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
    <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
  </Style>

  <Style Selector="Border.about-info-card">
    <Setter Property="Background" Value="{DynamicResource PhtvCardBrush}"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PhtvBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="14"/>
    <Setter Property="BoxShadow" Value="0 2 8 0 #0D000000"/>
  </Style>

  <Style Selector="Border.about-icon-tile">
    <Setter Property="Width" Value="42"/>
    <Setter Property="Height" Value="42"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Background" Value="{DynamicResource PhtvAccentSoftBrush}"/>
  </Style>

  <Style Selector="TextBlock.about-icon-glyph">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Foreground" Value="{DynamicResource PhtvAccentBrush}"/>
  </Style>
</Styles>
