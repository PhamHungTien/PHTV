# EditorConfig for PHTV project
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Swift files
[*.swift]
indent_style = space
indent_size = 4
max_line_length = 120

# Objective-C/C++
[*.{h,m,mm,c,cpp,hpp}]
indent_style = space
indent_size = 4

# Configuration files
[*.{json,yml,yaml,plist,xcconfig}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# HTML/CSS/JavaScript
[*.{html,css,js}]
indent_style = space
indent_size = 2

# XML
[*.xml]
indent_style = space
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Git files
[.git*]
indent_style = space
indent_size = 2
